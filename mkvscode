#!/bin/bash

# Define the gi function
gi () {
    curl -fLw '\n' https://www.toptal.com/developers/gitignore/api/"${(j:,:)@}"
}

# Create project folder function
create_project_folder() {
    # Check if the project folder already exists
    if [ -d "$PROJECT_NAME" ]; then
        echo "Project folder $PROJECT_NAME already exists."
        return 1
    fi

    # Create project directory
    mkdir -p "$PROJECT_NAME"
    cd "$PROJECT_NAME"

    # Initialize Git repository
    git init
}

# Option to open in VS Code flag
OPEN_IN_VSCODE=false

# Check for optional flags
while getopts ":o" opt; do
  case $opt in
    o)
      OPEN_IN_VSCODE=true
      ;;
    \?)
      echo "Invalid option: -$OPTARG" >&2
      ;;
  esac
done

# Shift off the options and optional --
shift $((OPTIND-1))

# Check if the required number of arguments are passed
if [ "$#" -ne 2 ]; then
    echo "Usage: $0 [-o] project_name language(python|lua|go|cpp|svelte)"
    exit 1
fi

PROJECT_NAME=$1
LANGUAGE=$2

# Setup project based on the specified language
case $LANGUAGE in
    python)
        create_project_folder
        curl -fLw '\n' "https://www.toptal.com/developers/gitignore/api/python" > .gitignore
        
        # Create a Python file named after the project
        cat >"$PROJECT_NAME.py" <<EOF
def main():
    print("Hello, $PROJECT_NAME!")

if __name__ == "__main__":
    main()
EOF

        # Create launch.json for Python debugging
        mkdir -p .vscode
        cat >.vscode/launch.json <<EOF
{
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "\${workspaceFolder}/$PROJECT_NAME.py"
        }
    ]
}
EOF
        ;;
    lua)
        create_project_folder
        curl -fLw '\n' "https://www.toptal.com/developers/gitignore/api/lua" > .gitignore
        
        # Create a Lua file named after the project
        cat >"$PROJECT_NAME.lua" <<EOF
print("Hello, $PROJECT_NAME!")
EOF

        # Create launch.json for Lua debugging
        mkdir -p .vscode
        cat >.vscode/launch.json <<EOF
{
    "configurations": [
        {
            "type": "lua-local",
            "request": "launch",
            "name": "Debug",
            "program": {
                "lua": "lua5.4",
                "file": "\${workspaceFolder}/$PROJECT_NAME.lua"
            }
        }
    ]
}
EOF
        ;;
    cpp)
        create_project_folder
        # C++ setup
        mkdir -p src
        cat >src/main.cpp <<EOF
#include <iostream>

int main() {
    std::cout << "Hello, $PROJECT_NAME!" << std::endl;
    return 0;
}
EOF

        # Create xmake.lua without the after_build function
        cat >xmake.lua <<EOF
add_rules("mode.debug", "mode.release")

-- Set project
set_project("$PROJECT_NAME")

-- Set languages
set_languages("c++17")

-- Set warnings
set_warnings("all", "error")

-- Define target
target("$PROJECT_NAME")
    set_kind("binary")
    add_files("src/*.cpp")
    
    -- Set optimization
    if is_mode("release") then
        set_optimize("fastest")
    elseif is_mode("debug") then
        set_optimize("none")
    end
EOF

        # Create .gitignore for C++ and xmake
        curl -fLw '\n' "https://www.toptal.com/developers/gitignore/api/c++,xmake" > .gitignore

        # Create tasks.json for xmake build
        mkdir -p .vscode
        cat >.vscode/tasks.json <<EOF
{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "xmake: build",
            "command": "xmake",
            "args": [],
            "options": {
                "cwd": "\${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
EOF

        # Create launch.json for C++ debugging
        cat >.vscode/launch.json <<EOF
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "\${workspaceFolder}/build/linux/x86_64/debug/$PROJECT_NAME",
            "args": [],
            "stopAtEntry": false,
            "cwd": "\${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "xmake: build"
        }
    ]
}
EOF

        # Configure the project in debug mode
        xmake f -m debug

        # Build the project
        xmake -v

        # Generate compile_commands.json separately
        xmake project -k compile_commands

        # Create c_cpp_properties.json
        cat >.vscode/c_cpp_properties.json <<EOF
{
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "\${workspaceFolder}/**"
            ],
            "defines": [],
            "compilerPath": "/usr/bin/gcc",
            "cStandard": "c11",
            "cppStandard": "c++17",
            "intelliSenseMode": "gcc-x64",
            "compileCommands": "\${workspaceFolder}/compile_commands.json"
        }
    ],
    "version": 4
}
EOF
        ;;
    go)
        create_project_folder
        curl -fLw '\n' "https://www.toptal.com/developers/gitignore/api/go" > .gitignore
        
        # Create a Go file named after the project
        cat >main.go <<EOF
package main

import "fmt"

func main() {
    fmt.Println("Hello, $PROJECT_NAME!")
}
EOF

        # Create launch.json for Go debugging
        mkdir -p .vscode
        cat >.vscode/launch.json <<EOF
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Program",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "\${workspaceFolder}/main.go",
            "cwd": "\${workspaceFolder}"
        }
    ]
}
EOF

        # Create tasks.json for Go build and run
        cat >.vscode/tasks.json <<EOF
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "go build -o $PROJECT_NAME main.go",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./$PROJECT_NAME",
            "group": "test",
            "problemMatcher": [],
            "dependsOn": "build"
        }
    ]
}
EOF
        ;;
    svelte)
        if [ -d "$PROJECT_NAME" ]; then
            echo "Project folder $PROJECT_NAME already exists."
            exit 1
        fi
        
        # Create SvelteKit project with TailwindCSS (v4)
        # Using --add tailwindcss="plugins:none" to avoid prompts and install tailwind without extra plugins
        npx sv create "$PROJECT_NAME" --template minimal --types ts --add tailwindcss="plugins:none" --install npm --no-dir-check
        cd "$PROJECT_NAME"
        git init
        curl -fLw '\n' "https://www.toptal.com/developers/gitignore/api/node" > .gitignore
        # Initialize shadcn-svelte
        # Pointing to src/routes/layout.css as that's where sv puts the tailwind import
        npx shadcn-svelte@latest init \
            --base-color slate \
            --css src/routes/layout.css \
            --lib-alias '$lib' \
            --components-alias '$lib/components' \
            --utils-alias '$lib/utils' \
            --ui-alias '$lib/components/ui' \
            --hooks-alias '$lib/hooks'
        
        # Create tasks.json
        mkdir -p .vscode
        cat >.vscode/tasks.json <<'EOF'
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dev",
            "type": "npm",
            "script": "dev",
            "isBackground": true,
            "problemMatcher": {
                "owner": "svelte",
                "pattern": {
                    "regexp": "^([^\\s].*):(\\d+):(\\d+):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*",
                    "endsPattern": "Ready in \\d+ms"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "check",
            "type": "npm",
            "script": "check",
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "npm",
            "script": "build",
            "group": "build",
            "problemMatcher": []
        }
    ]
}
EOF
        ;;
    *)
        echo "Unsupported language: $LANGUAGE"
        exit 1
        ;;
esac

# Create README.md with placeholders
cat >README.md <<EOF
# $PROJECT_NAME

## About
Placeholder for project about section

## Installation
Placeholder for installation instructions

## Usage
Placeholder for usage instructions

## Notes
Placeholder for additional notes
EOF

# Create VS Code workspace file
cat >"$PROJECT_NAME.code-workspace" <<EOF
{
    "folders": [
        {
            "path": "."
        }
    ],
    "settings": {}
}
EOF

git add .
git commit -m "Initial commit"

# At the end of your script, add the condition to open VS Code
if $OPEN_IN_VSCODE; then
    echo "Opening $PROJECT_NAME in VS Code..."
    code "$PROJECT_NAME.code-workspace"
fi

echo "$PROJECT_NAME project setup complete."